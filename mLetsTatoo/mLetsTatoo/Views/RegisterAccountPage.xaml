<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:mLetsTatoo.Helpers"             
             xmlns:control="clr-namespace:mLetsTatoo.Controls"
             x:Class="mLetsTatoo.Views.RegisterAccountPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="{i18n:Translate RegAccount}">
    <ContentPage.Content>
        <ScrollView
            BackgroundColor="Black"
            BindingContext="{Binding Register}">
            <StackLayout
                BackgroundColor="Black"
                Padding="5,10">
                <Label                            
                    FontAttributes="Bold"
                    FontSize="16"
                    Margin="20,5"
                    Text="{i18n:Translate UserData}"
                    TextColor="LightGray"
                    VerticalOptions="Start"/>
                <StackLayout
                    Padding="5,10,5,5"
                    VerticalOptions="StartAndExpand">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=".1*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width=".1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <control:CustomRegEntry 
                            BorderColor="Gray"
                            CornerRadius="12"
                            FontAttributes="Bold"
                            FontSize="18"
                            Grid.Column="1"
                            Grid.Row="0"
                            HeightRequest="40"
                            HorizontalTextAlignment="Start"
                            IsCurvedCornersEnabled="True"
                            Placeholder="{i18n:Translate Usuario}"
                            PlaceholderColor="Gray"
                            Text="{Binding User, Mode=TwoWay}"                        
                            TextColor="LightGray"
                            WidthRequest="50"/>
                        <control:CustomRegEntry 
                            BorderColor="Gray"
                            CornerRadius="12"
                            FontAttributes="Bold"
                            FontSize="18"
                            Grid.Column="1"
                            Grid.Row="1"
                            HeightRequest="40"
                            HorizontalTextAlignment="Start"
                            IsCurvedCornersEnabled="True"
                            IsPassword="True"
                            Placeholder="{i18n:Translate Password}"
                            PlaceholderColor="Gray"
                            Text="{Binding Password, Mode=TwoWay}"                        
                            TextColor="LightGray"
                            WidthRequest="50"/>
                        <control:CustomRegEntry 
                            BorderColor="Gray"
                            CornerRadius="12"
                            FontAttributes="Bold"
                            FontSize="18"
                            Grid.Column="1"
                            Grid.Row="2"
                            HeightRequest="40"
                            HorizontalTextAlignment="Start"
                            IsCurvedCornersEnabled="True"
                            IsPassword="True"
                            Placeholder="{i18n:Translate ConfirmPassword}"
                            PlaceholderColor="Gray"
                            Text="{Binding ConfirmPassword, Mode=TwoWay}"
                            TextColor="LightGray"
                            WidthRequest="50"/>
                        <control:CustomRegEntry 
                            BorderColor="Gray"
                            CornerRadius="12"
                            FontAttributes="Bold"
                            FontSize="16"
                            Grid.Column="1"
                            Grid.Row="3"
                            HeightRequest="40"
                            HorizontalTextAlignment="Start"
                            IsCurvedCornersEnabled="True"
                            Placeholder="{i18n:Translate Email}"
                            PlaceholderColor="Gray"
                            Text="{Binding Email, Mode=TwoWay}"                        
                            TextColor="LightGray"
                            WidthRequest="40"/>
                    </Grid>
                </StackLayout>
                <ActivityIndicator
                    IsRunning="{Binding IsRunning}"
                    VerticalOptions="CenterAndExpand"
                    />
                <StackLayout
                    Margin="40,0,40,5"
                    VerticalOptions="EndAndExpand">
                    <Button
                        BackgroundColor="Gray"
                        BorderRadius="23"
                        Command="{Binding RegPersonalCommand}"
                        FontAttributes="Bold"
                        FontSize="20"
                        HeightRequest="46"
                        IsEnabled="{Binding IsEnabled, Mode=TwoWay}"
                        Text="{i18n:Translate Next}"
                        TextColor="Black"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>